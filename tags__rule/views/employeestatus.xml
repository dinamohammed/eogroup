<odoo>
    <data>
        <record id="view_status_employee_form" model="ir.ui.view">
            <field name="name">status.employee.form</field>
            <field name="model">status.employee</field>
            <field name="arch" type="xml">
                <form string="Employee Status Form">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_status_employee_tree" model="ir.ui.view">
            <field name="name">status.employee.tree</field>
            <field name="model">status.employee</field>
            <field name="arch" type="xml">
                <tree string="Employee Status Tree">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="open_module_tree_status_employee" model="ir.actions.act_window">
            <field name="name">Status Employee</field>
            <field name="res_model">status.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new Employee Status
              </p><p>
                Odoo's Employee Status is used to manage status for each employee.
              </p>
            </field>
        </record>

        <menuitem
                id="menu_hr_status_employee_tree"
                action="open_module_tree_status_employee"
                parent="hr.menu_human_resources_configuration"
                sequence="6"
                groups="base.group_user"/>
    </data>
</odoo>